{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "rules": {
    "indent": [true, "spaces", 2],
    "trailing-comma": {
      "options": {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      },
      "severity": "error"
    },
    "no-unused-variable": {
      "severity": "off"
    },
    "no-console": {
      "severity": "off"
    },
    "prefer-const": {
      "severity": "off"
    },
    "react-a11y-anchors": {
      "severity": "error"
    },
    "react-a11y-aria-unsupported-elements": {
      "severity": "error"
    },
    "react-a11y-event-has-role": {
      "severity": "error"
    },
    "react-a11y-image-button-has-alt": {
      "severity": "error"
    },
    "react-a11y-img-has-alt": {
      "severity": "error"
    },
    "react-a11y-input-elements": {
      "severity": "error"
    },
    "react-a11y-lang": {
      "severity": "error"
    },
    "react-a11y-meta": {
      "severity": "error"
    },
    "react-a11y-no-onchange": {
      "severity": "error"
    },
    "react-a11y-props": {
      "severity": "error"
    },
    "react-a11y-proptypes": {
      "severity": "error"
    },
    "react-a11y-required": {
      "severity": "error"
    },
    "react-a11y-role": {
      "severity": "error"
    },
    "react-a11y-role-has-required-aria-props": {
      "severity": "error"
    },
    "react-a11y-role-supports-aria-props": {
      "severity": "error"
    },
    "react-a11y-tabindex-no-positive": {
      "severity": "error"
    },
    "react-a11y-titles": {
      "severity": "error"
    },
    "jsx-no-lambda": {
      "severity": "off"
    }
  }
}
